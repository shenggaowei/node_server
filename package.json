{
  "name": "backend",
  "version": "1.0.0",
  "description": "后台服务",
  "main": "index.ts",
  "scripts": {
    "start": "nodemon --ext js,ts --exec npm run dev",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "migration:run": "sequelize-cli db:migrate",
    "migration:create": "sequelize-cli migration:create --name",
    "deploy": "npm run build && pm2 restart out/index.js --node-args='-r ./tsconfig-paths-bootstrap.js'"
  },
  "keywords": [
    "server",
    "node"
  ],
  "author": "weishenggao",
  "license": "ISC",
  "dependencies": {
    "@sequelize/core": "^7.0.0-alpha.10",
    "axios": "^0.27.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "kcors": "^2.2.2",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-multer": "^1.0.2",
    "koa-router": "^10.1.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "sequelize": "^6.25.5",
    "sequelize-typescript": "^2.1.5",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/kcors": "^2.2.6",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-router": "^7.4.4",
    "@types/lodash": "^4.14.182",
    "nodemon": "^2.0.15",
    "sequelize-cli": "^6.4.1",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.6.3"
  }
}
