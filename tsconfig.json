{
  "compileOptions": {
    "experimentalDecorators": true,
    "target": "commonjs",
    "module": "ESNext",
    "allowJs": true,
    "declaration": true,
    "rootDir": "./src/",
    "outDir": "./dist/",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["node_module/**/*"]
}
